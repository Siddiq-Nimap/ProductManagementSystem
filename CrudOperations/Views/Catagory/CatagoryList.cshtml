@model IEnumerable<CrudOperations.Models.Catagory>

@{
    ViewBag.Title = "CatagoryList";
}

<h2>CatagoryList</h2>

<h4>
    @Html.ActionLink("Create New", "Create")
</h4>

<h5>
    <button class="btn btn-success"> @Html.ActionLink("Report", "Report","Catagory") </button>
</h5>
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatagoryName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatagoryName)
            </td>
            @if (item.IsActive)
            {
                <td>
                    <button class="btn btn-info"> @Html.ActionLink("Product-List", "ShowProduct", new { id = item.Id })</button>
                </td>
                <td>
                    <button class="btn btn-success">@Html.ActionLink("AddProduct", "AddProduct", new { id = item.Id })</button>
                </td>
                <td>
                    <button class="btn-danger">@Html.ActionLink("De-Activate", "DeActivate", new { id = item.Id })</button>
                </td>

            }
            else
            {
                <td>
                    <button class="btn-success">@Html.ActionLink("Activate", "Activate", new { id = item.Id })</button>

                </td>
            }



            <td>
                <button class="btn btn info">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</button>|
                <button class="btn btn-success"> @Html.ActionLink("Details", "Details", new { id = item.Id })</button>|
                <button class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>

@{
    double TotalPages = ViewBag.TotalPage;
    for (int i = 1; i <= TotalPages; i++)
    {
        <ul class="pagination">
            @if (i == ViewBag.CurrentPage)
            {
                <li class="active">
                    @Html.ActionLink(i.ToString(), "CataoryList", new { PagingNbr = i })
                </li>
            }
            else
            {
                <li>
                    @Html.ActionLink(i.ToString(), "CatagoryList", new { PagingNbr = i })
                </li>
            }

        </ul>
    }
}